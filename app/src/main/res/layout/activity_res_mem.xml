<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rouder_background"
        android:padding="16dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp">

        <EditText
            android:id="@+id/CCCD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập CCCD" />

        <EditText
            android:id="@+id/HovaTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CCCD"
            android:layout_marginTop="8dp"
            android:hint="Nhập Họ Và tên" />

        <EditText
            android:id="@+id/EmalNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/HovaTen"
            android:layout_marginTop="8dp"
            android:hint="Nhập Email" />

        <EditText
            android:id="@+id/STD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/EmalNV"
            android:layout_marginTop="8dp"
            android:hint="Nhập SĐT" />

        <EditText
            android:id="@+id/MaNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/STD"
            android:layout_marginTop="8dp"
            android:hint="Nhập Mã Nhân Viên" />

        <EditText
            android:id="@+id/MatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MaNV"
            android:layout_marginTop="8dp"
            android:hint="Nhập Mật Khẩu" />

        <Button
            android:id="@+id/DangKiNV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/MatKhau"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/red"
            android:text="Đăng Kí Nhân Viên" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/DangKiNV"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="@android:color/black" />


    </RelativeLayout>
</FrameLayout>