<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/ButtonMem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Đăng nhập với tư cách nhân viên" />
    <Button
        android:id="@+id/ButtonAmind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ButtonMem"
        android:layout_marginTop="8dp"
        android:text="Đăng nhập với tư cách quản lý" />

    <TextView
        android:id="@+id/Rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ButtonAmind"
        android:layout_marginTop="16dp"
        android:text="Ứng tuyển ngay!!!"
        android:gravity="center" />
    <ImageView
        android:id="@+id/BackLog"
        android:layout_width="70dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/login" />

</RelativeLayout>
