<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/rb5">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ImageSanpham"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/coach"/>
        <TextView
            android:id="@+id/TextSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="@string/app_name"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/ImageSanpham"
            />

        <!-- Thêm TextView cho giá sản phẩm -->
        <TextView
            android:id="@+id/TextGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/TextSanPham"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
